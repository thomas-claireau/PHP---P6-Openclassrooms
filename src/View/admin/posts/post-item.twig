<a href="{{url}}/index.php?access=admin&type=posts&id={{ id }}&action=update" class="article">
	<div class="first">
		<div class="date-auteur">
			<div class="date">{{ date|date('d/m/Y') }}</div>
			<div class="auteur">
				<div class="avatar"></div>
				<div class="nom">{{ user.prenom }} {{ user.nom }}</div>
			</div>
		</div>
		<h3>{{ title }}</h3>
	</div>
	<div class="img-article" style="background-image: url({{ url ~ '/' ~ main_img }})"></div>
	<div class="last">
		<div class="description">
			<p>{{ description|slice(0, 150)|raw }}</p>
		</div>
	</div>
</a>
