<div class="titre-avatar">
	<h2>Modifier votre article</h2>
</div>

<div class="infos-article">
	<div class="auteur">
		<div class="avatar"></div>
		<div class="auteur-date">
			<div class="nom">{{ user.prenom }} {{ user.nom }}</div>
			<div class="date">{{ posts.date|date('d/m/Y') }}</div>
		</div>
	</div>
</div>

<form method="post" action="/index.php/?access=post&id={{ posts.id }}&action=update&uploadImage=1&type=uploadMainImage" enctype="multipart/form-data">
	<input type="text" name="titre" id="titre" placeholder="Rentrez ici le titre de votre article" value="{{ posts.title }}" required>
	<label for="image">
		Choisissez l'image principale de l'article
		<input type="file" name="image" id="image" accept="image/x-png,image/gif,image/jpeg" required>
	</label>
	<h3>Rentrez une courte description de l'article</h3>
	<textarea name="description" id="description">{{ posts.description }}</textarea>
	<h3>Rentrez le contenu de l'article</h3>
	<textarea name="editor" id="editor">{{ posts.content|raw }}</textarea>
	<div class="actions">
		<a class="btn rougeFonce" href="/index.php?access=admin&type=posts&action=view">Retour</a>
		<button class="btn vertFonce" type="submit">Modifier</a>
	</div>
</form>

